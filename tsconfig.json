{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es5", "es2015"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "declaration": false,
    "sourceMap": false,
    "rootDir": "src",
    "esModuleInterop": true,
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/__tests__"
  ]
}
